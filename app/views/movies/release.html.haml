-#  This file is app/views/movies/release.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th <a href=title_header_path>Movie Title</a>
      %th Rating
      %th.hilite <a href=release_date_header_path>Release Date</a>
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
